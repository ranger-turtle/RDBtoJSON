<UserControl x:Class="RDBtoJSON.ParamControls.SQLiteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignWidth="300" Height="120" MinHeight="120" MinWidth="150">
    <Grid>
        <Label Content="Baza" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="40"/>
        <TextBox Name="txtDatabasePath" Height="23" Margin="55,13,10,0" TextWrapping="NoWrap" IsReadOnly="True" VerticalAlignment="Top" AllowDrop="False"/>
        <Button Margin="0,44,10,0" VerticalAlignment="Top" Content="Wybierz..." HorizontalAlignment="Right" Width="75" Click="DatabaseSelect_Click"/>

        <Label Content="Hasło" HorizontalAlignment="Left" Margin="10,0,0,8" VerticalContentAlignment="Center" Height="26" VerticalAlignment="Bottom"/>
        <PasswordBox Name="txtDatabasePass" Margin="55,0,10,8" AllowDrop="False" PasswordChar="*" Height="23" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
